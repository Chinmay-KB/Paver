<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:layout_gravity="center"
    android:layout_margin="2dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="8dp"
    android:backgroundTint="@color/colorAccent"
    card_view:cardBackgroundColor="#fff"
    card_view:cardCornerRadius="1dp"
    card_view:cardElevation="3dp"
    card_view:contentPadding="4dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/subject_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/q"
                    android:gravity="center_vertical"
                    android:text="Hello!"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:textColor="#000"
                    android:textSize="23dp"
                    card_view:layout_constraintEnd_toEndOf="parent"
                    card_view:layout_constraintHorizontal_bias="0.0"
                    card_view:layout_constraintStart_toStartOf="parent"
                    card_view:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/year_display_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/q"
                    android:text="2042"
                    android:textColor="@color/colorPrimary"
                    card_view:layout_constraintBottom_toBottomOf="parent"
                    card_view:layout_constraintEnd_toEndOf="parent"
                    card_view:layout_constraintHorizontal_bias="0.095"
                    card_view:layout_constraintStart_toEndOf="@+id/semester_card_view"
                    card_view:layout_constraintTop_toTopOf="@+id/semester_card_view"
                    card_view:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/semester_card_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/q"
                    android:text="Autumn Sem"
                    android:textColor="@color/colorPrimary"
                    card_view:layout_constraintBottom_toBottomOf="parent"
                    card_view:layout_constraintStart_toEndOf="@+id/which_sem"
                    card_view:layout_constraintTop_toTopOf="@+id/which_sem"
                    card_view:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/q"
                    android:text="1st year"
                    android:textColor="@color/colorPrimary"
                    card_view:layout_constraintBottom_toBottomOf="parent"
                    card_view:layout_constraintEnd_toEndOf="parent"
                    card_view:layout_constraintHorizontal_bias="0.0"
                    card_view:layout_constraintStart_toEndOf="@+id/stream_card_view"
                    card_view:layout_constraintTop_toBottomOf="@+id/subject_code"
                    card_view:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/stream_card_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/q"
                    android:text="B.Tech"
                    android:textColor="@color/colorPrimary"
                    card_view:layout_constraintBottom_toBottomOf="parent"
                    card_view:layout_constraintEnd_toEndOf="parent"
                    card_view:layout_constraintHorizontal_bias="0.0"
                    card_view:layout_constraintStart_toStartOf="parent"
                    card_view:layout_constraintTop_toBottomOf="@+id/subject_code"
                    card_view:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/which_sem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/q"
                    android:text="mid sem"
                    android:textColor="@color/colorPrimary"
                    card_view:layout_constraintBottom_toBottomOf="parent"
                    card_view:layout_constraintStart_toEndOf="@+id/year"
                    card_view:layout_constraintTop_toTopOf="@+id/year"
                    card_view:layout_constraintVertical_bias="0.0" />
        </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>